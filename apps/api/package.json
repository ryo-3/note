{
  "name": "@petaboo/api",
  "type": "module",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250831.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "tsx": "^4.20.3",
    "wrangler": "^3.82.0"
  },
  "scripts": {
    "db:studio": "drizzle-kit studio --port 8795",
    "db:push": "drizzle-kit push",
    "db:push:remote": "wrangler d1 execute petaboo --remote --file=./schema.sql",
    "dev": "wrangler dev --port 7594 --log-level debug 2>&1 | tee -a ../../api.log",
    "deploy": "wrangler deploy",
    "deploy:dev": "wrangler deploy --env development",
    "db:reset": "node reset-db.js"
  },
  "dependencies": {
    "@hono/auth-js": "^1.0.15",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/node-server": "1.14.4",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "hono": "4.8.3",
    "resend": "^4.0.0",
    "zod": "^3.25.67"
  }
}
