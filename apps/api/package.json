{
  "name": "@petaboo/api",
  "type": "module",
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250904.0",
    "drizzle-kit": "^0.31.2",
    "drizzle-orm": "^0.44.2",
    "tsx": "^4.20.3",
    "wrangler": "^4.34.0"
  },
  "scripts": {
    "dev": "wrangler dev --port 7594 2>&1 | tee ../../api.log",
    "deploy": "wrangler deploy",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "wrangler d1 execute petaboo --local --file=./drizzle/$(ls -t ./drizzle/*.sql | head -1 | xargs basename)",
    "db:migrate:prod": "find ./drizzle -name '*.sql' -type f | sort -V | while read file; do echo \"Applying $file...\"; wrangler d1 execute petaboo --remote --file=\"$file\" || echo \"Already applied or error: $file\"; done",
    "db:studio": "drizzle-kit studio --port 8795",
    "db:reset": "lsof -ti:7594 | xargs -r kill -9 && rm -rf .wrangler"
  },
  "dependencies": {
    "@hono/auth-js": "^1.0.15",
    "@hono/clerk-auth": "^2.0.0",
    "@hono/node-server": "1.14.4",
    "@hono/swagger-ui": "^0.5.0",
    "@hono/zod-openapi": "0.18.4",
    "@hono/zod-validator": "^0.4.2",
    "hono": "4.8.3",
    "resend": "^4.0.0",
    "zod": "^3.25.67"
  }
}
